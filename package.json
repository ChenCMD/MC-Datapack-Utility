{
	"name": "mc-commander-util",
	"displayName": "Minecraft Commander Utilility",
	"description": "",
	"version": "1.0.0",
	"author": "ChenCMD",
	"contributors": [
		"t5ugu"
	],
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:mccutil.commands.createDatapackTemplate",
		"onCommand:mccutil.commands.createFile",
		"onCommand:mccutil.commands.scoreOperation"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mccutil.commands.createDatapackTemplate",
				"title": "%mccutil.commands.createDatapackTemplate.title%",
				"category": "Datapack"
			},
			{
				"command": "mccutil.commands.createFile",
				"title": "%mccutil.commands.createFile.title%",
				"category": "Datapack"
			},
			{
				"command": "mccutil.commands.scoreOperation",
				"title": "%mccutil.commands.scoreOperation.title%",
				"category": "Datapack"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "mccutil.commands.createFile",
					"when": "explorerResourceIsFolder == true",
					"group": "navigation@4"
				}
			],
			"commandPalette": [
				{
					"command": "mccutil.commands.createFile",
					"when": "false"
				}
			]
		},
		"configuration": {
			"title": "Minecraft Commander Utilility",
			"properties": {
				"mccutil.language": {
					"type": "string",
					"enum": [
						"Default",
						"en",
						"ja"
					],
					"markdownDescription": "%mccutil.config.language%",
					"default": "Default"
				},
				"mccutil.scoreOperation.prefix": {
					"type": "string",
					"markdownDescription": "%mccutil.config.scoreOperation.prefix%",
					"default": "$MCCUTIL_"
				},
				"mccutil.scoreOperation.forceInputType": {
					"type": "string",
					"enum": [
						"Default",
						"Always Selection",
						"Always InputBox"
					],
					"markdownEnumDescriptions": [
						"%mccutil.scoreOperation.forceInputType.default%",
						"%mccutil.scoreOperation.forceInputType.alwaysSelection%",
						"%mccutil.scoreOperation.forceInputType.alwaysInputBox%"
					],
					"markdownDescription": "%mccutil.scoreOperation.forceInputType%",
					"default": "Default"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	}
}