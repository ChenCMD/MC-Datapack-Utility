{
	"name": "mc-commander-util",
	"displayName": "Minecraft Commander Utilility",
	"description": "",
	"version": "1.0.0",
	"author": "ChenCMD",
	"contributors": [
		"t5ugu"
	],
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:mccutil.commands.createDatapackTemplate",
		"onCommand:mccutil.commands.createFile",
		"onCommand:mccutil.commands.scoreOperation"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mccutil.commands.createDatapackTemplate",
				"title": "%mccutil.commands.createDatapackTemplate.title%",
				"category": "Datapack"
			},
			{
				"command": "mccutil.commands.createFile",
				"title": "%mccutil.commands.createFile.title%",
				"category": "Datapack"
			},
			{
				"command": "mccutil.commands.scoreOperation",
				"title": "%mccutil.commands.scoreOperation.title%",
				"category": "Datapack"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "mccutil.commands.createFile",
					"when": "explorerResourceIsFolder == true",
					"group": "navigation@4"
				}
			],
			"commandPalette": [
				{
					"command": "mccutil.commands.createFile",
					"when": "false"
				}
			]
		},
		"configuration": {
			"title": "Minecraft Commander Utilility",
			"properties": {
				"mccutil.language": {
					"type": "string",
					"enum": [
						"Default",
						"en",
						"ja"
					],
					"markdownDescription": "%mccutil.config.language%",
					"default": "Default"
				},
				"mccutil.scoreOperation.prefix": {
					"type": "string",
					"markdownDescription": "%mccutil.config.scoreOperation.prefix%",
					"default": "$MCCUTIL_"
				},
				"mccutil.scoreOperation.forceInputType": {
					"type": "string",
					"enum": [
						"Default",
						"Always Selection",
						"Always InputBox"
					],
					"markdownEnumDescriptions": [
						"%mccutil.config.scoreOperation.forceInputType.default%",
						"%mccutil.config.scoreOperation.forceInputType.alwaysSelection%",
						"%mccutil.config.scoreOperation.forceInputType.alwaysInputBox%"
					],
					"markdownDescription": "%mccutil.config.scoreOperation.forceInputType%",
					"default": "Default"
				},
				"mccutil.createDatapackTemplate.customTemplate": {
					"type": "array",
					"items": {
						"type": "object",
						"additionalProperties": false,
						"required": [
							"label",
							"generates"
						],
						"properties": {
							"label": {
								"type": "string",
								"markdownDescription": "%mccutil.config.createDatapackTemplate.customTemplate.label%"
							},
							"generates": {
								"type": "array",
								"markdownDescription": "%mccutil.config.createDatapackTemplate.customTemplate.generates%",
								"minItems": 1,
								"items": {
									"type": "object",
									"additionalProperties": false,
									"required": [
										"type",
										"relativeFilePath"
									],
									"properties": {
										"type": {
											"type":"string",
											"markdownDescription": "%mccutil.config.createDatapackTemplate.customTemplate.generates.type%",
											"enum": [
												"file",
												"folder"
											]
										},
										"relativeFilePath": {
											"type": "string",
											"markdownDescription": "%mccutil.config.createDatapackTemplate.customTemplate.generates.relativeFilePath%",
											"pattern": "^[^\\\\:*?\"<>|]+$",
											"patternErrorMessage": "%mccutil.config.createDatapackTemplate.customTemplate.generates.relativeFilePath.error%"
										},
										"content": {
											"type": "array",
											"markdownDescription": "%mccutil.config.createDatapackTemplate.customTemplate.generates.content%",
											"items": {
												"type": "string",
												"markdownDescription": "%mccutil.config.createDatapackTemplate.customTemplate.generates.content%"
											}
										}
									}
								}
							}
						}
					},
					"markdownDescription": "%mccutil.config.createDatapackTemplate.customTemplate%",
					"default": []
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	}
}